    <script src="@Url.Content("~/Content/assets/js/vendor/holder.min.js")"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="@Url.Content("~/Content/assets/js/ie10-viewport-bug-workaround.js")"></script>
</body>

</html>
